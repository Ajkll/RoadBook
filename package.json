{
  "name": "roadbook",
  "version": "1.0.0",
  "description": "RoadBook 360 - Plateforme num√©rique pour l'apprentissage de la conduite",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint --fix ."
  },
  "keywords": [
    "roadbook",
    "driving",
    "learning",
    "digital"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --no-stash --verbose --concurrent false"
    }
  },
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": [
      "cd client && npx eslint --fix",
      "cd client && npx prettier --write"
    ],
    "server/**/*.{js,ts}": [
      "cd server && npx eslint --fix",
      "cd server && npx prettier --write"
    ]
  }
}
