{
  "name": "roadbook-server",
  "version": "1.0.0",
  "description": "RoadBook API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seeds/seed.ts",
    "test:api": "npm run build && node test-server.js",
    "test:simple": "./launch-test-simple.sh"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prisma": "^5.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
