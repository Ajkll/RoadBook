{
  "name": "roadbook-server",
  "version": "1.0.0",
  "description": "RoadBook API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "build:fast": "tsc --skipLibCheck",
    "start": "node dist/index.js",
    "test": "jest --runInBand --testMatch '**/auth.service.test.ts' '**/user.service.test.ts' '**/roadbook.service.test.ts' '**/basics.test.ts'",
    "test:watch": "jest --watch --runInBand",
    "test:unit": "jest --runInBand --testPathPattern='src/tests/((?!integration|e2e).)*\\.test\\.ts$'",
    "test:coverage": "jest --coverage --runInBand",
    "test:api": "npm run build:fast && node test-server.js",
    "check-test-env": "ts-node src/tests/check-test-env.ts",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seeds/index.ts",
    "seed:minimal": "ts-node prisma/seeds/minimal-seed.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "pg": "^8.15.1",
    "prisma": "^5.0.0",
    "testcontainers": "^10.24.2",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
